<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/order_submit_item"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.85"/>

    <com.foodorder.order.view.componet.UnifiedImageView
            android:id="@+id/submit_item_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_h1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintDimensionRatio="h,1:0.618"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    <com.foodorder.order.view.componet.UnifiedTextView
            android:id="@+id/submit_item_text_name"
            app:layout_constraintStart_toStartOf="@id/guideline_h1"
            app:layout_constraintEnd_toStartOf="@id/guideline_h2"
            app:layout_constraintTop_toTopOf="@id/submit_item_image"
            app:layout_constraintBottom_toBottomOf="@id/submit_item_image"
            android:background="@color/colorWhite"
            android:layout_marginRight="8dp"
            android:text="Seafood Pealla"
            android:textSize="@dimen/order_submit_layout_text_size"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

